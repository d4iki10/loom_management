<h1>ホーム画面</h1>

<h2>受注管理</h2>

<% if @orders.any? %>
    <table>
        <thead>
            <tr>
                <th>会社名</th>
                <th>品番</th>
                <th>色番</th>
                <th>数量</th>
                <th>開始日</th>
                <th>詳細</th>
            </tr>
        </thead>
        <tbody>
            <% @orders.each do |order| %>
            <tr>
                <td><%= order.company&.name %></td>
                <td><%= order.product_number&.number %></td>
                <td><%= order.color_number&.color_code %></td>
                <td><%= order.quantity %></td>
                <td><%= order.start_date %></td>
                <td><%= link_to '詳細', order_path(order) %></td>
                <td><%= link_to '編集', edit_order_path(order) %></td>
                <td><%= link_to '戻る', root_path %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
<% else %>
    <p><%= @no_orders_message %></p>
<% end %>
